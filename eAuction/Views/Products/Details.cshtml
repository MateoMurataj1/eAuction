@model ProductModel

<div class="row text">
    <div>
        <p>
            <h1>Auction Details</h1>
        </p>
        <div>
                <form asp-action="Details">

                    <div style="display: grid; grid-gap: 10px; padding: 20px">

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label control-label" asp-for="ProductName">Product Name</label>
                            <div class="col-sm-8">
                               <input asp-for="ProductName" class="form-control" type="text" readonly>
                            </div>
                        </div>
                                                
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label control-label" asp-for="SellerName">Created By</label>
                            <div class="col-sm-8">
                                <input asp-for="SellerName" class="form-control" type="text" readonly>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label control-label" asp-for="EndingDate">Time Reaming</label>
                            <div class="col-sm-8">
                                <input asp-for="EndingDate" class="form-control" type="text" readonly>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label control-label" asp-for="ProductDescription">Product Description</label>
                            <div class="col-sm-8">
                                <textarea asp-for="ProductDescription" class="form-control" type="text" rows="4" cols="50" readonly></textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label control-label" asp-for="HighestBidName">Highest Bid Name</label>
                            <div class="col-sm-8">
                                <input asp-for="HighestBidName" class="form-control" type="text" readonly>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label control-label" asp-for="HighestBid" class="control-label">New Highest Bid</label>
                            <div class="col-sm-8">
                                <input asp-for="HighestBid" class="form-control" type="number">
                            </div>
                            <span asp-validation-for="HighestBid" class="text-danger"></span>
                        </div>

                        <div hidden>
                            <input asp-for="ProductId" class="form-control" readonly>
                        </div>

                        <div hidden>
                            <input asp-for="StartingDate" class="form-control" readonly>
                        </div>

                        <div hidden>
                            <input asp-for="SellerId" class="form-control" readonly>
                        </div>

                        <div hidden>
                            <input asp-for="StartingBid" class="form-control" readonly>
                        </div>

                    </div>
                   
                    <div class="form-group">
                        <input style="float: right;" type="submit" value="Bid!" class="btn btn-outline-success float-right" />
                    </div>
                </form>

        </div>
    </div>
</div>